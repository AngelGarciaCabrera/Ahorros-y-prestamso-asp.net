@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<style>
    .Fondo-negro {
        background: #343a40;
    }
</style>

<section  style="margin-top: 7%"> 

  

    <center> 

        <div class="card shadow p-3 mb-5 bg-body-tertiary rounded" style="max-width: 500px; "> 

            <div class="card-header p-3 mb-2 bg-success text-white" id="card-header"> 

                <h3 class="card-title">Factura de Préstamo</h3> 

            </div> 

            <div class="card-body"> 
                
                <div class="mb-3" style="float: left">
                     <label class="form-label"  for="codigo">Código del Préstamo:</label>
                    <input  class="form-control" type="text" id="codigo" name="codigo" readonly>

                </div> 

                <div class="mb-3" style="float: right">
                    <label  class="form-label" for="pago">Monto Mensual a Pagar:</label>
                   <input  class="form-control" type="text" id="pago" name="pago" readonly>
                        

                </div>
                    <div class="mb-3" style="padding-top: 100px;">

                    </div> 

                    <div class="mb-3"> 
                        
                       <div class="form-group">
                         <label for="metodo_pago" class="form-label">Método de Pago:</label>
                         <select name="metodo_pago" id="metodo_pago" class="form-select" required>
                           <option value="">Selecciona una opción</option>
                           <option value="efectivo">Efectivo</option>
                           <option value="cheque">Cheque</option>
                           <option value="tarjeta">Tarjeta</option>
                         </select>
                       </div>

                    </div> 

                <div class="mb-3">
                      <label  class="form-label" for="fecha">Fecha:</label>
                    <input type="date" class="form-control" id="fecha" name="fecha" readonly>


                </div>
                    <div class="form-group"> 
                        

                    </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="padding-top: 80px; padding: 1em;">
                    <button type="submit" class="btn btn-outline-danger"value="Generar factura"> Generar factura</button>

                </div>

            </div> 

        </div> 

    </center> 

</section> 

