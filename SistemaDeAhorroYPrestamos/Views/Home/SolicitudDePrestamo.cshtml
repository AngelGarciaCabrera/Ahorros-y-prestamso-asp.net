@model Prestamo



@{
    
    var codigo = new Random().Next(1, 1000);
    ViewData["Title"] = "SolicitudDePrestamo";
    var fechaHoy = DateTime.Now;
    var fechaMinima = fechaHoy.AddMonths(1);
}


 <section id="formularioP" style="padding-top: 60px; padding-bottom: 40px;" >

<center>
        <div class="card shadow p-3 mb-5 bg-body-tertiary rounded"  style="max-width: 500px; ">
             <div class="card-header p-3 mb-2 bg-success text-white" id="card-header" >
                <h3 class="card-title">Solicitud de Prestamos</h3>
            </div>
            <div class="card-body">
                <form asp-action="SolicitudDePrestamo">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="mb-3" style="float: left">
                        <label asp-for="Codigo" class="control-label"></label>
                        <input disabled asp-for="Codigo" class="form-control" value="@codigo" />
                     </div>
                     <div class="mb-3" style="float: right">
                        <label asp-for="Interes" class="control-label"></label>
                       <input disabled asp-for="Interes" class="form-control" />    
                    </div>
                   
                    <div class="mb-3" style="padding-top: 100px;">  
                        <label asp-for="Monto" class="control-label"></label>
                        <input asp-for="Monto" class="form-control" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                     <div class="mb-3">
                        <label asp-for="FechaBeg" class="control-label">Fecha Inicial</label>
                        <input asp-for="FechaBeg" min="@fechaHoy" value="@fechaHoy" class="form-control" />
                        <span asp-validation-for="FechaBeg" class="text-danger"></span>
                    </div>
                     <div class="mb-3" >
                        <label asp-for="FechaEnd" class="control-label"> Fecha final</label>
                        <input  asp-for="FechaEnd" min="@fechaMinima" class="form-control" />
                        <span asp-validation-for="FechaEnd" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="ClienteCedula" class="control-label">Cliente Cedula</label>
                       <input asp-for="ClienteCedula" class="form-control" value="@Model.ClienteCedula" disabled />


                    </div>
                     
                       <div style="padding-left: 20px;padding-top: 20px" >
                        <button  style="float:left;"  type="submit" class="btn btn-outline-success" name="botonPresionado" value="CalcularInteres" >Calcular Interes</button>
                        </div>
                         <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="padding-top: 80px; padding: 1em;"> 
                              <button type="submit" class="btn btn-outline-info"  name="botonPresionado" value="Enviar">Solicitar</button>
                              <button type="submit" class="btn btn-outline-danger"name="botonPresionado"value="eliminar"> Limpiar</button>
                         </div>
                       
                </form>
            </div>
        </div>
</center>
  </section>


