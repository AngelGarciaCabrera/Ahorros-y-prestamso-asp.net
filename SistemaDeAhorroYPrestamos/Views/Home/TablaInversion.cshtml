@model List<CuotaInversion>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>
<style>
    .Fondo-negro {
        background: #343a40;
    }
</style>
<body onload="LlenarTablaPrestmaos()">

<center>
    <section style="margin-top: 70px">
        <div class="card" style="max-width:70%">
            <div class="card-header "style="background-color:dodgerblue">
                <h1 class="card-title">Tabla Inversiones</h1>
            </div>
            <div class="card-body" style="overflow-y: scroll;">
                <table class="table table-hover " id="tabla">
                    <thead>
                    <tr>
                        <th>Número de Inversion</th>
                        <th>Fecha planificada</th>
                        <th>Fecha realizada</th>
                        <th>Cuenta DE banco</th>
                    </tr>
                    </thead>
                    @if (Model != null)
                    {
                        <tbody>
                        @foreach (var cuota in Model)
                        {
                            <tr>
                                <td>@cuota.CodigoInversion</td>
                                <td>@cuota.FechaPlanificada</td>
                                <td>@cuota.FechaRealizada</td>
                                <td>@cuota.CuentaBancoNumero</td>
                            </tr>

                            
                        }
                        </tbody>
                    }
                </table>

            </div>


        </div>

    </section>


</center>


</body>